
body {
	font-family: "Open Sans","Helvetica Neue","Helvetica",sans-serif;
	font-size: 14px;
	color: #444;
	width: 1000px;
	margin: 20px auto;
	background: #f6f6f6;
}

table {
	color: #333;
	font-size: 14px;
	border-collapse:
	collapse; border-spacing: 0;
	width: 100%;
	margin-top: 20px;
	margin-bottom: 20px;
}

img {
	margin-left: auto;
    margin-right: auto;
    display: block;
    border: solid 1px #DDD;
	margin-top: 30px; }

td, th { border: 1px solid transparent; /* No more visible border */ height: 30px; transition: all 0.3s;  /* Simple transition for hover effect */ }

th {
	background: #DFDFDF;  /* Darken header a bit */
	font-weight: bold;
	padding-left: 3px;
	padding-right: 3px;
}

td {
	background: #FAFAFA;
	text-align: center;
}

a:link {
    color: #000000;
    text-decoration: none;
}

/* visited link */
a:visited {
    color: #000000;
}

/* mouse over link */
a:hover {
    color: #666666;
}

/* selected link */
a:active {
    color: #666666;
}

/* Cells in even rows (2,4,6...) are one color */
tr:nth-child(even) td { background: #F1F1F1; }

/* Cells in odd rows (1,3,5...) are another (excludes header cells)  */
tr:nth-child(odd) td { background: #FEFEFE; }

tr:hover td { background: #666!important; color: #FFF; } /* Hover cell effect! */

.sorting_asc, .sorting_desc {
	background: #666!important; color: #FFF;
}

h2 {
	font-size: 22px;
	margin: 35px 0 7px 0;
	padding: 0 0 10px 0;
}

.bold {
	font-weight:bold;
}

.thumb {
    margin: auto;
    width: 40px;
}

ul#menu{
    list-style-type: none;
    padding: 0;
    font-weight:bold;
    display:inline;
}
ul#menu>li {
    display: inline;
    margin-right: 10px;
}

.accountb_title{
    width: 120px;
    display: inline-block;
    margin-left: 20px;
}

.graph {width: 1000px;}
.red {color: red;}
.green {color: ##7FFF00;}
.right {text-align: right;}
